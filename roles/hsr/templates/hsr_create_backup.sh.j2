#!/bin/bash
# Check if puppet variable is filled
# Only for multi instance installations!
# Without Multi-Instance installations delete -d SystemDB

su - {{ item.value.hana_sid_small }}adm -c "echo \"\c -i {{ item.value.hana_instance_number }} -u SYSTEM -p {{ item.value.hana_pw_system_user_clear }} -d SystemDB
BACKUP DATA USING FILE ('{{ item.value.hsr_backup_directory }}')\" | hdbsql"

if [ $? != "0" ]; then 
exit 1
fi

# Only Prefix had to be defined with multiple container databases. otherweise there is a error
su - <%=@hana_sid_small%>adm -c "echo \"\c -i <%=@hana_instance_number%> -u SYSTEM -p <%=@hana_pw_system_user_clear%> -d <%=@hana_sid%>
BACKUP DATA USING FILE ('<%=@hana_sid%>')\" | hdbsql"

if [ $? != "0" ]; then
exit 1
fi


# Puppet 3 Facts
if [ -d /etc/facter/facts.d/ ]; then

cat << EOF > /etc/facter/facts.d/hsr_backup_configured.sh
#!/bin/bash
echo "hsr_backup_configured=yes"
EOF
chmod 755 /etc/facter/facts.d/hsr_backup_configured.sh

fi

# Ansible Fact
if [ -d /etc/ansible/facts.d ]; then

cat << EOF > /etc/ansible/facts.d/hsr_backup_configured_{{ item.value.hana_sid_small }}.fact
hsr_backup_configured_{{ item.value.hana_sid_small }}: true
EOF

chmod 644 /etc/ansible/facts.d/hsr_backup_configured_{{ item.value.hana_sid_small }}.fact

fi


